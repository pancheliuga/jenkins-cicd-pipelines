pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            agent {
                docker {
                    image 'node:7.8.0'
                    args '-v /var/run/docker.sock:/var/run/docker.sock' // Enable Docker-in-Docker
                }
            }
            steps {
                sh './scripts/build.sh'
            }
        }
        stage('Test') {
            steps {
                sh './scripts/test.sh'
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    def dockerImage = docker.build("opancheliuga/nodeapp:${env.BRANCH_NAME}-${env.BUILD_NUMBER}")
                    dockerImage.push()
                }
            }
        }
        stage('Push Docker Image') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub_id', usernameVariable: 'DOCKER_USERNAME', passwordVariable: 'DOCKER_PASSWORD')]) {
                    sh "docker login -u ${DOCKER_USERNAME} -p ${DOCKER_PASSWORD}"
                    sh "docker push opancheliuga/nodeapp:${env.BRANCH_NAME}-${env.BUILD_NUMBER}"
                }
            }
        }
    }
}
